                        </div>
                        
                    </div>
                </div> 
                <div class="col-lg-9 col-md-9 col-sm-9 produt-refresh">
                    <div class="row property__gallery">
            <% product.forEach((item)=>{%>
                        <div class="col-lg-3 col-md-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="images/<%= item.image[0] %>">
                                    <!-- <div class="label new">New</div> -->
                                    <ul class="product__hover">
                                        <li><a href="images/<%=item.image[0] %>" class="image-popup"><span class="arrow_expand"></span></a></li>
                                        <li><a href="/addtoWishlist?id=<%= item._id %>"><span id='<%= item._id %>'  class="<%= wishlist?.product?.includes(item._id) ? 'icon_heart' : 'icon_heart_alt red' %>" onclick="change('<%= item._id %>')"></span></a></li>
