                        <div class="sidebar__categories">
                            <div class="section-title">
                                <h4 onclick="getProduct('all','all')">Categories</h4>
                            </div>
                            <div class="categories__accordion">
                                <div class="accordion" id="accordionExample">
                                    <% category.forEach((item, index) => { %>
                                        <% if (item.status == "main") { %>
                                            <div class="card">
                                                <div class="card-heading active">
                                                    <a data-toggle="collapse" data-target="#collapse<%= index %>"><%= item.name %></a>
                                                </div>
                                                <div id="collapse<%= index %>" class="collapse " data-parent="#accordionExample">
                                                    <div class="card-body">
                                                        <ul>
                                                            <% category.forEach((cat, subIndex) => { %>
                                                                <% if (cat.status == "sub") { %>
                                                                    <li data-item-name="<%= item.name %>" data-cat-name="<%= cat.name %>" onclick="getProductFromListItem(this)">
                                                                        <a><%= cat.name %></a>
                                                                    </li>
                                                                <% } %>
                                                            <% }) %>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    <% }) %>
                                </div>
                            </div>
                            
                        </div>
