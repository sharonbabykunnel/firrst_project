    <% if(product){%>
    <!-- Shop Cart Section Begin -->
    <section class="shop-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                                <tbody>
                                <%for(let i=0; i<product.length; i++){ %>
                                    <tr>
                                        <td class="cart__product__item"><a href="/productDetails/<%=product[i]?.product_id?._id %>">
                                            <img src="images/<%= product[i]?.product_id?.image[0] %>" alt="" width="100 px">
                                        </a>
                                            <div class="cart__product__item__title">
                                                <h6><%= product[i].product_id?.title%></h6>
                                                <div class="rating">
                                                    <% for(let j=1; j<=5; j++){ if(j<= product[i].product_id?.totalrating){%>
                                                    <i class="fa fa-star"></i>
                                                    <%}else{%>
                                                        <i class="fa fa-star-o"></i>
                                                    <%}}%>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price">$<%= product[i].product_id?.price %></td>
                                        <td class="cart__quantity">
                                            <div class="pro-qty"> 
                                                <input type="text" value="<%= product[i].quantity %>" name="quantity" id="quantityInput">
                                                <span></span>
                                            </div>
                                        </td>
                                        <td class="cart__quantity">
                                            
                                        <a href="#" onclick="updateQuantity('<%= product[i]._id %>')">Update</a>
                                        </td>
                                        
                                        
                                        
                                        <td class="cart__total" aria-valuenow="">$ <%= product[i].product_id?.price * product[i].quantity %></td>
                                        <td class="cart__close"><a href="/deleteCart?id=<%= product[i]._id %>"><span class="icon_close"></span></a></td>
                                    </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn">
                        <a href="/">Continue Shopping</a>
                    </div>
                </div>
                <!-- <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn update__btn">
                        <a href="/updateCart?quantity=quantity"><span class="icon_loading"></span> Update cart</a>
                    </div>
                </div> -->
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="discount__content">
                        <h6>Discount codes</h6>
                        <form action="/cart/coupon" method="post">
                            <input type="text" name="code" value='' placeholder='<%= typeof message == "undefined" ? "Enter coupon code" : message %>'>
                            <button type="submit" class="site-btn">Apply</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-2">
                    <div class="cart__total__procced">
                        <h6>Cart total</h6>
                        <ul>
                            <li>Subtotal <span>$ <%= calculatTotal(product) %></span></li>
                            <% if(typeof discount !="undefined"){%><li>Total <span id="total" >$ <%= calculatTotal(product) -(calculatTotal(product) * discount /100) %></span></li><%}else{%><li>Total <span id="total" >$ <%= calculatTotal(product)  %></span></li><%}%>
                        </ul>
                        <a href="/checkout?discount=<%=discount%>&couponId=<%=couponId%>" class="primary-btn">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Cart Section End -->
                            <%}else{%>

<p>No cart product</p>
                            <%}%>
