    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__left product__thumb nice-scroll">
                            <% if(product.image[0]){%>
                            <a class="pt active" href="#product-1">
                                <img src="/images/<%= product.image[0] %>" alt="">
                            </a><%} %>
                            <% if(product.image[1]){%>
                            <a class="pt" href="#product-2">
                                <img src="/images/<%= product.image[1] %>" alt="">
                            </a><%} %>
                            <% if(product.image[2]){%>
                            <a class="pt" href="#product-3">
                                <img src="/images/<%= product?.image[2] %>" alt="">
                            </a><%} %>
                            <% if(product.image[3]){%>
                            <a class="pt" href="#product-4">
                                <img src="/images/<%= product?.image[3] %>" alt="">
                            </a><%} %>
                        </div>
                        <div class="product__details__slider__content">
                            <div class="product__details__pic__slider owl-carousel">
                                <% if(product.image[0]){%>
                                <img data-hash="product-1" class="product__big__img" src="/images/<%= product.image[0] %>" alt=""><%} %>
                                <% if(product.image[1]){%>
                                <img data-hash="product-2" class="product__big__img" src="/images/<%= product.image[1] %>" alt=""><%} %>
                                <% if(product.image[2]){%>
                                <img data-hash="product-3" class="product__big__img" src="/images/<%= product?.image[2] %>" alt=""><%} %>
                                <% if(product.image[3]){%> 
                                <img data-hash="product-4" class="product__big__img" src="/images/<% product.image[3] %> "> <%} %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product__details__text">
                        <h3><%= product.title %><span>Brand: <%= product.brand %></span></h3>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <span>( 0 reviews )</span>
                        </div>
                        <div class="product__details__price">$<%= product.discount ? product.discount : product.price  %> <span><%= product.discount ? product.price : '' %></span></div>
                        <p></p>
                        <div class="product__details__button">
                            <form action="/addtoCart?id=<%= product?._id %>" method="post">
                                <div class="quantity">
                                    <span>Quantity:</span>
                                    <div class="pro-qty">
                                        <input type="text" value="<%= typeof cartData != 'undefined' ? cartData?.quantity : '0' %>" name="quantity">
                                    </div>
                                </div>
                                <button class="cart-btn">Add to Cart</button>
                                <!-- <a href="/addtoCart?id=<%= product._id %>"  class="cart-btn"><span class="icon_bag_alt"></span> Add to cart</a> -->
                            </form>
                            <ul>
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                <li><a href="#"><span class="icon_adjust-horiz"></span></a></li>
                            </ul>
                        </div>
                        <div class="product__details__widget">
                            <ul>
                                <li>
                                    <span>Availability:</span>
                                    <div class="stock__checkbox">
                                       <%= product.quantity>0 ? 'In Stoke' : 'Out of stokes' %>
                                    </div>
                                </li>
                                <li>
                                    <label for="red"><%= product.color %>
                                        <span class="checkmark <%= product.color %>-bg"></span>
                                    <span>Available color:</span>
                                    <div class="color__checkbox">
                                        </label>
                                        </label>
                                    </div>
                                </li>
                                <li>
                                    <span>Available size:</span>
                                    <div class="size__btn">
                                        <label for="xs-btn" class="active"><%= product.size %>
                                        </label>
                                    </div>
                                </li>
                                <li>
                                    <span>Promotions:</span>
                                    <p>Free shipping</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">Specification</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">Reviews </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <h6>Description</h6>
                                <p><%= product.discription %></p>
                            </div>
                            <div class="tab-pane" id="tabs-2" role="tabpanel">
                                <h6>Specification</h6>
                            </div>
                            <div class="tab-pane" id="tabs-3" role="tabpanel">
                                <h6>Reviews </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           <% if(products){ %>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="related__title">
                        <h5>RELATED PRODUCTS</h5>
                    </div>
                </div>
                <% for(let i=0; i<products.length; i++){%>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="/images/<%= products[i].image[0] %>" >
                                <div class="label new">New</div>
                                <ul class="product__hover">
                                    <li><a href="/images/<%= products[i].image[0] %>" class="image-popup"><span class="arrow_expand"></span></a></li>
                                    <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                    <li><a href="/productDetails/<%=products[i].id %>"><span class="icon_bag_alt"></span></a></li>
                                </ul>
                            </div>
                                <div class="product__item__text">
                                    <h6><a href="/productDetails/<%=products[i].id %>"><%= products[i].title %></a></h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price">$ <%= products[i].price %></div>
                                </div>
                            </div>
                        </div>
                    <%}%>
                </div>
           <%}else{%>

           <%}%>
            
    </section>
