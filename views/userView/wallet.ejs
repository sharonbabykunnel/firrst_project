<%- include('../layouts/userHeader.ejs') %>

<div class="site-wrap">
    <div class="bg-light py-3">
        <div class="container">
          <div class="row">
            <div class="col-md-12 mb-0"><a href="/user">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">My Wallet</strong></div>
          </div>
        </div>
      </div>
      <div class="site-section">
        <div class="container">
          <div class="row mb-5">
            <div class="col-md-12">

                 <!-- Bootstrap Dark Table -->

                 <div class="card">
                    <h5 class="card-header text-white bg-danger">Wallet Balance : ₹ <%= typeof wallet == 'undefined' ? '0' : wallet?.balance %></h5>
                    <div class="table-responsive text-nowrap">
                      <table class="table table-dark">
                        <thead>
                          <tr>
                            <th>No.</th>
                            <th>Date</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Payment Method</th>
                            <th>Refunded Amount</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          <% if (orders.length === 0) { %>
                            <tr>
                              <td colspan="7" class="text-center">No refunded orders available</td>
                            </tr>
                          <% } else { %>
                            <%let n = 1; orders.reverse().forEach((order, index) => { %>
                              
                              <tr>
                                <td><%= n++ %></td>
                                <td>
                                  <% if (order.createdAt) { %>
                                    <%= order.createdAt.toLocaleDateString() %>
                                  <% } else { %>
                                    N/A
                                  <% } %>
                                </td>
                                <td><strong>
                                  <% order.item.forEach((item) => {  %>
                                    <%= item.product.title %> <br>
                                  <% }) %>
                                </strong></td>
                                <td>
                                  <% order.item.forEach((item) => { %>
                                    <%= item.quantity %> <br>
                                  <% }) %> 
                                </td>
                                <td><%= order.payment %></td>
                                <td><% if(order.status != "ordered"){%>+<%}else{%>-<%}%><strong>₹ <%= order.total %></strong></td>
                              </tr>
                              <% if(order.payment == 'wallet' && order.status == 'Cancelled'){%>
                                <tr>
                                  <td><%= n++ %></td>
                                  <td>
                                    <% if (order.createdAt) { %>
                                      <%= order.createdAt.toLocaleDateString() %>
                                    <% } else { %>
                                      N/A
                                    <% } %>
                                  </td>
                                  <td><strong>
                                    <% order.item.forEach((item) => { %>
                                      <%= item.product.title %> <br>
                                    <% }) %>
                                  </strong></td>
                                  <td>
                                    <% order.item.forEach((item) => { %>
                                      <%= item.quantity %> <br>
                                    <% }) %> 
                                  </td>
                                  <td><%= order.payment %></td>
                                  <td><% if(order.status != "ordered"){%>-<%}else{%>+<%}%><strong>₹ <%= order.total %></strong></td>
                                </tr>
                                <%}%>
                            <% }) %>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  
                
                  
                  

                <!-- /Bootstrap Dark Table -->
            </div>
          </div>
        </div>
      </div>

     
<%- include('../layouts/userFooter.ejs') -%>