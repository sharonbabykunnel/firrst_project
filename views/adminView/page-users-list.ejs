                    </div>
                </header> <!-- card-header end// -->
                <%if(user){%>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>user</th>
                                        <th>Email</th>
                                        <th>mobile</th>
                                        <th>Status</th>
                                        <th class="text-end"> Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0;i<user.length;i++){%>
                                        <tr>
                                            <td width="40%">
                                                <a  class="itemside">
                                                    <div class="left"><% if(user.image){%>
                                                        
                                                        <img src="/images/<%= user[i].image ? user[i].image : '/rp-1.jpg' %>" class="img-sm img-avatar" alt="Userpic">
                                                    <%}else{%>
                                                        <i class="icon material-icons md-person"></i>
                                                    <%}%>
                                                    </div>
                                                    <div class="info pl-3">
                                                        <h6 class="mb-0 title"><%= user[i].name %>
                                                        </h6>
                                                    </div>
                                                </a>
                                            </td>
                                            <td><span class="badge rounded-pill alert-success"><%=user[i].email%></span></td>
                                            <td><%=user[i].mobile%></td>
                                            <td><a href="/admin/status?id=<%= user[i]._id %>&status=<%= user[i].is_blocked %>"><%= user[i].is_blocked === 1 ? 'Blocked' : 'Active' ;%></a></td>
                                            <td class="text-end">
                                                <a href="/admin/userDetails?id=<%= user[i]._id%>" class="btn btn-sm btn-brand rounded font-sm mt-15">View details</a>
                                            </td>
                                        </tr>
                                   <% }%>

                                </tbody>
                            </table> <!-- table-responsive.// -->
                        </div>
                    </div> <!-- card-body end// -->
                </div> <!-- card end// -->
                <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                <% for(let j=1; j<=totalPage; j++){ %>
                             <li class="page-item active"><a class="page-link" href="?page=<%=j%>"><%= j %></a></li>
                             <%}%>
                            </ul>
                        </nav>
                    </div>
