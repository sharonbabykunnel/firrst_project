            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <form action="">
                                <input type="text" placeholder="Search..." class="form-control" name="search" value="<%= search %>">
